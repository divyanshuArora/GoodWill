<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Login">






    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:orientation="vertical"
        android:layout_margin="@dimen/dim_20"
        android:background="@drawable/loginbox"
        >


        <TextView
            android:layout_width="match_parent"
            android:layout_height="@dimen/dim_50"
            android:text="Login"
            android:gravity="center"
            android:textColor="#000000"
            android:textSize="@dimen/sp_14"
            android:layout_margin="@dimen/dim_4"
            android:background="#e6dede"
            />





        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Mobile Number"
            android:textColorHint="#000000"
            android:background="@drawable/edittext"
            android:padding="@dimen/dim_5"
            android:ems="10"
            android:id="@+id/number"
            android:maxLength="10"
            android:inputType="number"
            android:textColor="#000000"
            android:layout_margin="@dimen/dim_10"
            android:text=""
            />

        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Passsword"
            android:background="@drawable/edittext"
            android:padding="@dimen/dim_5"
            android:id="@+id/password"
            android:inputType="textPassword"
            android:textColorHint="#000000"
            android:textColor="#000000"
            android:layout_margin="@dimen/dim_10"
            />



    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Login"
        android:textColor="#ffffff"
        android:textAllCaps="false"
        android:layout_margin="@dimen/dim_15"
        android:background="#0936c7"
        android:id="@+id/login"
        />





    </LinearLayout>



</LinearLayout>