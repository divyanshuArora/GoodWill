<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".Received_Payment">



    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_margin="@dimen/dim_10"
        android:background="@drawable/loginbox"
        >


        <Spinner
            android:layout_width="match_parent"
            android:layout_height="@dimen/dim_60"
            android:layout_margin="@dimen/dim_10"
            android:padding="@dimen/dim_10"
            android:id="@+id/empNameReceive"
            />






            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="5dp"
                android:hint="Date"
                android:inputType="date"
                android:padding="@dimen/dim_10"
                android:windowSoftInputMode="stateHidden"
                android:cursorVisible="false"
                android:background="@drawable/edit_text"
                android:layout_weight="5"
                android:textColorHint="#000000"
                android:drawableLeft="@drawable/drawable_left"
                android:textSize="@dimen/sp_16"
                android:drawablePadding="@dimen/dim_5"
                android:id="@+id/DateRec"
                android:textColor="#000000"/>



            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/dim_5"
                android:hint="Amount"
                android:textSize="@dimen/sp_16"
                android:inputType="number"
                android:background="@drawable/edit_text"
                android:padding="@dimen/dim_10"
                android:id="@+id/amntRece_record"
                android:singleLine="true"
                android:textColor="#000000"
                android:textColorHint="#000000"/>




        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Insert Record"
            android:id="@+id/getRecord"
            android:textAllCaps="false"
            android:layout_margin="@dimen/dim_10"
            android:background="@drawable/button_design"
            />


    </LinearLayout>





</LinearLayout>